'use client';
import { useState } from 'react';

export default function AdminDeleteButton({ id, onDone }: { id: string; onDone?: () => void }) {
  const [loading, setLoading] = useState(false);

  async function doDelete() {
    if (!confirm('Diesen Fall in den Papierkorb verschieben? (Kein E-Mail-Versand)')) return;
    setLoading(true);
    try {
      const res = await fetch(`/api/admin/cases/${id}/soft-delete`, {
        method: 'POST',
        headers: { 'x-role': 'admin' }, // Deine echte Auth später hier rein
      });
      if (!res.ok) throw new Error('Delete failed');
      onDone?.();
      alert('Fall wurde in den Papierkorb verschoben.');
    } catch (e) {
      alert('Fehler beim Löschen. Bitte erneut versuchen.');
    } finally {
      setLoading(false);
    }
  }

  return (
    <button className="rounded-lg border px-3 py-2" onClick={doDelete} disabled={loading}>
      {loading ? '…' : 'Delete'}
    </button>
  );
}
